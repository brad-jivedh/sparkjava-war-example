 agent any
   stages {
     stage ('Checkout Stage') {
       steps {
          git branch: 'master', url: 'https://github.com/brad-jivedh/sparkjava-war-example.git'

       }
     }
        stage ('Build stage') {
          steps {
              sh '/opt/apache-maven-3.9.6/bin/mvn cleanÂ package -Dmaven.test.skip=true'
       }
     }
        stage ('Push') {
          steps {
            echo "This is the push stage"
            }
     }
        stage ('Deploy') {
          steps {
            sh 'sudo rsync /var/lib/jenkins/workspace/tomcat/target/*.war ubuntu@15.206.79.202:/opt/apache-tomcat-9.0.87/webapps/'       }
     }
   }
}
